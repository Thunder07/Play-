<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/action_bar</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#c84dff</item>
        <!--item name="colorPrimaryDark">#ff000000</item-->

    </style>

    <style name="Settings" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/action_bar_Blue</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#1976d2</item>
        <!--item name="colorPrimaryDark">#ff000000</item-->
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    <style name="MyActionBar"
        parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/action_bar_Blue</item>
    </style>

    <style name="Salmon_Pink" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/action_bar_Salmon_Pink</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#c2185b</item>
        <!--item name="colorPrimaryDark">#ff000000</item-->

    </style>

    <style name="Yellow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/action_bar_Yellow</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#ffa000</item>

    </style>


    <style name="Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/action_bar_Blue</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#1976d2</item>

    </style>


    <style name="Teal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/action_bar_Teal</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#00796b</item>

    </style>

    <color name="action_bar">#c300ff</color>
    <color name="action_bar_Salmon_Pink">#ffff0095</color>
    <color name="action_bar_Yellow">#ffc107</color>
    <color name="action_bar_Blue">#2196f3</color>
    <color name="action_bar_Teal">#009688</color>
</resources>